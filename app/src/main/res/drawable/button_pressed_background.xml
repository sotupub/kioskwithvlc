<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border definition -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="3dp" android:color="@android:color/white" /> <!-- White stroke -->
            <corners android:radius="4dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Background color fill -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- Define this color in colors.xml -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
