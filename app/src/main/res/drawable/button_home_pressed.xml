<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border definition -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="3dp" android:color="@android:color/white" /> <!-- White stroke -->
            <corners android:radius="4dp" /> <!-- Rounded corners if needed -->
        </shape>
    </item>
    <!-- Background color fill -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- This should be your desired background color when pressed -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
